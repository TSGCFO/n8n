run = ["bash", "main.sh"]

hidden = ["node_modules"]
entrypoint = "WELCOME.md"
modules = ["nodejs-22", "postgresql-16"]

[agent]
expertMode = true

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "n8n"

[[workflows.workflow]]
name = "n8n"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash main.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "main.sh"]
build = ["npm", "run", "build"]

[nix]
channel = "stable-25_05"
packages = ["curl"]
